@{
    Layout = "MyLayout";
    int Counter = 1;

}

@model IEnumerable<DepartmentStore.Models.Entry>

<div class="col-lg-10">
    <div class="card">
        <div class="card-header">
            <h4>Items</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>DateCreated</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Price/Unit</th>
                            <th>TotalPrice</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>@Counter</td>
                                <td>@items.CreatedDate</td>
                                <td>@items.Name</td>
                                <td>@items.Category</td>

                                <td>@items.Quantity</td>
                                <td>@items.Rate</td>
                                <td><p>coming soon</p></td>
                                <td><button type="submit" class="btn btn-primary">Update</button><button type="submit" class="btn btn-danger">Delete</button></td>
                                @{
                                    Counter++;
                                }
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>