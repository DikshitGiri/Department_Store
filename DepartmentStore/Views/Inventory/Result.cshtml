
@{
    Layout = "myLayout";
    int Counter = 1;

}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@model IEnumerable<DepartmentStore.Models.Entry>
<br />

                <table class="table table-striped table-lg " id="mytable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>DateCreated</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Price/Unit</th>
                            <th>TotalPrice</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>@Counter</td>
                                <td>@items.CreatedDate</td>
                                <td>@items.Name</td>
                                <td>@items.Category</td>

                                <td>@items.Quantity</td>
                                <td>@items.Rate</td>
                                <td>@items.TotalCost</td>
                                <td ><a asp-route-id="@items.Id" asp-controller="Inventory" asp-action="Edit" class="btn btn-outline-primary">Update</a><a class="btn btn-outline-danger" asp-controller="Inventory" asp-action="Delete" asp-route-id="@items.Id">Delete</a></td>
                                @{
                                    Counter++;
                                }
                            </tr>

                        }
                    </tbody>
                </table>

  

  
